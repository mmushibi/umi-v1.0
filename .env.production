# Production Configuration for Umi Health POS
# Domain: umihealth.zm

# Application Settings
DOMAIN=umihealth.zm
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=umi_health_pos_prod
DATABASE_USER=umi_health_user
DATABASE_PASSWORD=${DATABASE_PASSWORD}

# JWT Configuration
JWT_ISSUER=https://umihealth.zm
JWT_AUDIENCE=https://umihealth.zm
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_EXPIRY_HOURS=24

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://umihealth.zm,https://www.umihealth.zm

# Security Settings
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# Email Configuration (for notifications)
SMTP_HOST=smtp.umihealth.zm
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=noreply@umihealth.zm

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,csv,xlsx,jpg,jpeg,png

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=/var/log/umihealth/application.log

# Performance Settings
CACHE_TIMEOUT_MINUTES=30
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT_SECONDS=30

# Compliance Settings (Zambia-specific)
TIMEZONE=Africa/Lusaka
DEFAULT_CURRENCY=ZMW
DATE_FORMAT=yyyy-MM-dd
ENABLE_AUDIT_LOGGING=true

# Feature Flags
ENABLE_MULTI_TENANCY=true
ENABLE_PRESCRIPTION_MANAGEMENT=true
ENABLE_INVENTORY_TRACKING=true
ENABLE_REPORTING=true
ENABLE_API_RATE_LIMITING=true

# AI Service Configuration
AI_CACHE_EXPIRATION_MINUTES=30
AI_MAX_CONCURRENT_REQUESTS=100
AI_SEMANTIC_CACHE_ENABLED=true
AI_LEARNING_ENABLED=true
AI_PERFORMANCE_MONITORING_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_QUERY_LENGTH=1000
AI_RESPONSE_TIMEOUT_SECONDS=30

# External AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
AZURE_COGNITIVE_SERVICES_KEY=${AZURE_COGNITIVE_SERVICES_KEY}
AZURE_COGNITIVE_SERVICES_ENDPOINT=${AZURE_COGNITIVE_SERVICES_ENDPOINT}
PUBMED_API_KEY=${PUBMED_API_KEY}
GOOGLE_SEARCH_API_KEY=${GOOGLE_SEARCH_API_KEY}

# AI Model Configuration
AI_MODEL_PATH=/app/models
AI_CACHE_PATH=/app/cache
AI_KNOWLEDGE_BASE_UPDATE_INTERVAL_HOURS=24
AI_LEARNING_BATCH_SIZE=100
AI_TRAINING_ENABLED=true

# AI Analytics
AI_TRACK_USAGE_METRICS=true
AI_ENABLE_PERFORMANCE_LOGGING=true
AI_EXPORT_ANALYTICS_INTERVAL_HOURS=6

# Redis Configuration (for AI caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# PostgreSQL Connection String
DATABASE_CONNECTION_STRING=Host=postgres;Port=5432;Database=umi_health_pos_prod;Username=umihealth_user;Password=${DATABASE_PASSWORD};Include Error Detail=true
