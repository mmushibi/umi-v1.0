# Production Environment Variables for Umi Health POS
# Domain: umihealth.zm
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_CONNECTION_STRING=Host=localhost;Database=umi_health_pos_prod;Username=umihealth_user;Password=YOUR_SECURE_PASSWORD;
POSTGRES_DB=umi_health_pos_prod
POSTGRES_USER=umihealth_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# JWT Configuration
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS

# Redis Configuration
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Grafana Configuration
GRAFANA_PASSWORD=YOUR_GRAFANA_ADMIN_PASSWORD

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/umihealth.zm.crt
SSL_KEY_PATH=/etc/ssl/private/umihealth.zm.key

# Email Configuration (Optional)
SMTP_HOST=smtp.umihealth.zm
SMTP_PORT=587
SMTP_USER=noreply@umihealth.zm
SMTP_PASSWORD=YOUR_SMTP_PASSWORD

# Monitoring Configuration
SENTRY_DSN=YOUR_SENTRY_DSN
PROMETHEUS_RETENTION=200h

# Backup Configuration
BACKUP_S3_BUCKET=umihealth-backups
BACKUP_S3_REGION=af-south-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY

# Security Configuration
ALLOWED_HOSTS=umihealth.zm,www.umihealth.zm,api.umihealth.zm
CORS_ORIGINS=https://umihealth.zm,https://www.umihealth.zm

# Performance Configuration
CACHE_TIMEOUT_MINUTES=30
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=/var/log/umihealth/application.log

# Feature Flags
ENABLE_MONITORING=true
ENABLE_BACKUP=true
ENABLE_SSL_RENEWAL=true
ENABLE_RATE_LIMITING=true
